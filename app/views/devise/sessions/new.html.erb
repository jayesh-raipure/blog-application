<div class="container">
   <div class="row">
    <h2>Please LogIn</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="col-md-6">
        <% if alert %>
          <div class="alert alert-danger">
            <%= alert %> <br/>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.label :email, 'Email Id:' %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password, 'Password' %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>
      
        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
        <%= f.submit "Log in", class: "btn btn-default" %>
      </div>
    <% end %>
    <div class="col-md-7"> 
      <%= render "devise/shared/links" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h2>Use Social Login</h2>
      <div class="col-md-3">
        <%= link_to "auth/facebook", class: "btn btn-block btn-social btn-facebook" do %> 
          Sign in with Fb
          <span class="fa fa-facebook""></span>
        <% end %>
      </div>

      <div class="col-md-3">
        <%= link_to "auth/facebook", class: "btn btn-block btn-social btn-google" do %> 
          Sign in with Gmail
          <span class="fa fa-google""></span>
        <% end %>
      </div>
    </div>
  </div>
</div>