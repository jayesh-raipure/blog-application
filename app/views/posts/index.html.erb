<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-6">
      <div id="postlist">
        <div class="panel">
        <!-- Panel Starts here -->
          <% @posts.each do |post| %>
            <div class="panel-heading">
              <div class="text-center">
                <div class="row">
                  <div class="col-sm-9">
                    <h3 class="pull-left"><%= link_to post.title, post %></h3>
                  </div>
                  <div class="col-sm-3">
                    <h4 class="pull-right">
                      <small><em><%= post.created_at.strftime("%B, %d, %Y")%></em></small>
                    </h4>
                  </div>
                </div>
              </div>
            </div>
                  
            <div class="panel-body">
              <%= post.content %>
            </div>
          <% end %>
        <!-- Panel End -->
        </div>
      </div>
    </div>
    
  </div>
</div>