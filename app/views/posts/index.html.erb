<div class="row">
  <div class="col-md-7 col-lg-7 col-sm-7">
    <% if flash['notice'] %>
      <div class="alert alert-success" style="margin: 10px 10px 0px 10px;">
        <%= flash['notice'] %>
      </div>
    <% end %>
  </div>
  <div class="col-md-9 col-lg-9 col-sm-9">
    <div id="postlist">
      <!-- Panel Starts here -->
      <% @posts.each do |post| %>
        <div class="panel">
          <div class="panel-heading">
            <div class="text-center">
              <div class="row">
                <div class="col-sm-6 col-md-6 col-lg-6">
                  <h3 class="pull-left"><%= link_to post.title, post %></h3>
                </div>
                <div class="col-sm-6 col-md-6 col-lg-6">
                  <h4 class="pull-right">
                    <small><em><%= post.created_at.strftime("%B, %d, %Y")%></em></small>
                  </h4>
                </div>
              </div>
            </div>
          </div>
                  
          <div class="panel-body">
            <%= post.content %>
          </div>
        </div>
      <% end %>
      <!-- Panel End -->
    </div>
  </div>
</div>
