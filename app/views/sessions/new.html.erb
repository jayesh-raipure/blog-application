<div class="container">
   <div class="row">
    <h2>Please LogIn</h2>
    <%= form_tag"login" do %>
	  <div class="col-md-6">
	    <% if notice %>
	      <div class="alert alert-danger">
	        <%= notice %> <br/>
	      </div>
	    <% end %>
	    <div class="form-group">
	      <%= label_tag :emailid, 'Email Id:' %>
	      <%= text_field_tag :emailid, params['emailid'],class: "form-control" %>
	    </div>
	    <div class="form-group">
	      <%= label_tag :password, 'Password' %>
	      <%= password_field_tag :password, nil,class: "form-control" %>
	    </div>
	    <%= submit_tag "LogIn", class: "btn btn-default"  %>
	  </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h2>Use Social Login</h2>
      <div class="col-md-3">
      	<%= link_to "auth/facebook", class: "btn btn-block btn-social btn-facebook" do %> 
	        Sign in with Fb
	        <span class="fa fa-facebook""></span>
        <% end %>
      </div>

      <div class="col-md-3">
      	<%= link_to "auth/facebook", class: "btn btn-block btn-social btn-google" do %> 
	        Sign in with Gmail
	        <span class="fa fa-google""></span>
        <% end %>
      </div>
    </div>
  </div>
</div>